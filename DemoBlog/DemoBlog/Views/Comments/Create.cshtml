@model DemoBlog.Models.Comment

@{
    ViewBag.Title = "Create Comment";
    var toPost = ViewBag.toPost;
}

<div>
    <h2>Create Comment</h2>
</div>

<hr />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Body, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Body, new { htmlAttributes = new { @rows = 10 } })
                @Html.ValidationMessageFor(m => m.Body, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default btn-sm" />
            </div>
        </div>
    </div>
}

<hr />

@Html.ActionLink("Back to Post", "Details", "Posts", new { id = toPost }, new { @class = "btn btn-default btn-sm" })

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Malee.js"></script>
}
